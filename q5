#include<iostream>
using namespace std;
int main(){
    int r,c;
    
    cout<<"Enter number of rows of matrix:";
    cin>>r;
    cout<<"Enter number of colm of matrix:";
    cin>>c;
    int a[r][c];
    cout<<"Enter elements of matrix:";
    for(int i=0;i<r;i++){
        for(int j=0;j<c;j++){
            cin>>a[i][j];
        }
    }
    cout<<"Original matrix is:\n";
    for(int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            cout<<a[i][j]<<" ";
        }
       cout << endl;
    }
    
     
    for (int i=0;i<r;i++)
    {
        int rsum=0;
       for(int j=0;j<c;j++){
          
           rsum = rsum + a[i][j];
       }
       
        cout << "sum of " << i << " row= " << rsum << "\n";
        
    }
    
    
      
    for (int j=0;j<c;j++)
    {
       int csum =0;
       for(int i=0;i<r;i++){
          
           csum = csum + a[i][j];
       }
       
        cout << "sum of " << j << " column= " << csum << "\n";
        
    }
    
    
  
    
 
    return 0;

}


