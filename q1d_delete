1.d ---DELETE


#include <iostream>
using namespace std;

int main() {
    int arr[6]; 
    int x;
    cout << "Enter six values for Array: ";
    for (int i = 0; i <= 5; i++) {  
        cin >> arr[i];
    }
    cout << "The array is :\n ";
    for (int i = 0; i <= 5; i++) {
        cout << arr[i] << " ";
    }
    
    cout << "enter the number to be deleted ";
    cin >> x ; 
    for (int i = 0; i <=5; i++) 
    {
        if (arr[i] == x)
        {
            
            for (int j = i; j < 5; j++)
            {
                
                arr[j] = arr[j + 1]; 
            }
        }
    }
     for (int i = 0; i <= 4; i++)
     {
        cout << arr[i] << " ";
    }
    
    return 0;
}


